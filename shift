module shift_operators();
  
  initial begin
    $display("4'b0101 << 1 = %b", (4'b0101 << 1));    //1010	
    $display("4'b1100 << 1 = %b", (4'b1100 << 1));	  //1000	
    $display("4'b0001 >> 1 = %b", (4'b0001 >> 1));	  //0000
    $display("4'b1111 >> 1 = %b", (4'b1111 >> 1));	  //0111	
    $display("4'b0101 >> 1 = %b", (4'b0101 >> 1));	  //0010	
  	#10 $finish;
    
  end
endmodule
