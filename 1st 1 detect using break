// Detect 1st 1 in the binary number

module detect_1();
  reg [31:0] num;
  reg [5:0] position;
  integer i;
  
  initial begin
  for(i = 0; i < 32; i++)begin
    if(num[i] == 1)
      position = i;
    break;
  end
  end
  
  initial begin
    $monitor(" INPUT = %b  MIN_POSITION = %d", num, position);
  #1 num = 32'h1000_1000;
  #1 num = 32'h1100_0000;
  #1 num = 32'h1000_1010;
  #10 $finish;
end

endmodule
